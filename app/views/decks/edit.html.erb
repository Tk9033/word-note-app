<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto space-y-6">
    <!-- ヘッダー -->
    <div class="flex items-center justify-between">
      <h1 class="text-2xl md:text-3xl font-bold text-gray-900"><%= t('.title') %></h1>
      <%= link_to t('.back_to_deck', default: "戻る"), @deck,
            class: "inline-flex items-center rounded-xl border border-gray-300 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
    </div>

    <!-- フォームカード -->
    <%= render "form", deck: @deck %>
  </div>
</div>