<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <%# ヘッダー部分: タイトルとアクションボタン %>
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-800">
        <%= t('.title') %>: <span class="font-medium"><%= @deck.name %></span>
      </h1>
      <div class="flex items-center space-x-2">
        <%= link_to t('.edit_deck'), edit_deck_path(@deck), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition-colors" %>
        <%= button_to t('.destroy_deck'), @deck, method: :delete, data: { turbo_confirm: t('helpers.confirmations.destroy') }, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition-colors" %>
        <%= link_to t('.back_to_decks'), decks_path, class: "text-blue-500 hover:text-blue-800" %>
      </div>
    </div>

    <%# フラッシュメッセージの表示 %>
    <% if notice %>
      <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded-md" role="alert">
        <p><%= notice %></p>
      </div>
    <% end %>

    <%# 単語カード一覧を表示するエリア %>
    <div class="bg-white shadow-md rounded-lg p-8">
      <h2 class="text-2xl font-semibold text-gray-700 mb-4">単語カード一覧</h2>
      <p class="text-gray-500">ここに単語が表示されます。</p>
      <%# TODO: 単語カードのロジックをここに追加 %>
    </div>
  </div>
</div>
