<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <%# ヘッダー部分: タイトルとアクションボタン %>
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-800">
        <%= t('.title') %>: <span class="font-medium"><%= @deck.name %></span>
      </h1>
      <div class="flex items-center space-x-2">
        <%= link_to t('.edit_deck'), edit_deck_path(@deck), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition-colors" %>
        <%= button_to t('.destroy_deck'), @deck, method: :delete, data: { turbo_confirm: t('helpers.confirmations.destroy') }, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition-colors" %>
        <%= link_to t('.back_to_decks'), decks_path, class: "text-blue-500 hover:text-blue-800" %>
      </div>
    </div>

    <%# 単語カード一覧を表示するエリア %>
    <div class="bg-white shadow-md rounded-lg p-6 mt-8">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-semibold text-gray-700"><%= t('.cards_title') %></h2>
        <%= link_to t('.new_card'), new_deck_card_path(@deck), class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition-colors" %>
      </div>

      <% if @cards.any? %>
        <div id="cards" class="space-y-4">
          <%= render @cards %>
        </div>
      <% else %>
        <div class="text-center bg-gray-50 p-10 rounded-lg border border-dashed">
          <p class="text-gray-600 mb-4"><%= t('.no_cards') %></p>
          <%= link_to t('.create_first_card'), new_deck_card_path(@deck), class: "inline-block bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg shadow-md transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
