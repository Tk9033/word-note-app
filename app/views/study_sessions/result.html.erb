<div class="min-h-screen bg-blue-50">
  <!-- ヘッダー（Web向けフル幅） -->
  <header class="sticky top-0 z-20 bg-white/90 backdrop-blur border-b">
    <div class="container mx-auto max-w-6xl px-6 py-4 flex items-center justify-between">
      <!-- 左：デッキ情報 -->
      <div class="flex items-center gap-3">
        <%= link_to decks_path, class: "btn btn-ghost btn-sm rounded-xl" do %>
          ← <span class="ml-1 hidden sm:inline"><%= t('decks.index.title', default: '単語帳一覧') %></span>
        <% end %>
        <div>
          <div class="text-sm font-semibold text-gray-900"><%= @deck.name %></div>
          <div class="text-xs text-gray-500"><%= t('.title', default: '学習結果') %></div>
        </div>
      </div>
      <!-- 右：アクション -->
      <div class="flex items-center gap-3">
        <%= link_to t('.back_to_deck_button', default: 'この単語帳へ戻る'), deck_path(@deck), class: "btn btn-outline btn-sm rounded-xl" %>
        <%= link_to t('.back_to_decks_button', default: '一覧へ'), decks_path, class: "btn btn-ghost btn-sm rounded-xl" %>
      </div>
    </div>
  </header>

  <!-- 本文 -->
  <main class="container mx-auto max-w-4xl px-6 py-10">
    <!-- 中央寄せ：内容が少なくても下が開きすぎないよう調整 -->
    <div class="grid min-h-[calc(100vh-220px)] place-content-center">
      <section class="rounded-2xl border bg-white shadow-sm p-6">
        <!-- 見出し -->
        <div class="mb-6">
          <h1 class="text-2xl font-semibold text-gray-900"><%= t('.title', default: '学習結果') %></h1>
          <p class="text-sm text-gray-500 mt-1">
            <%= t('.summary_hint', default: '今回の正答率と誤答を確認して、必要なら間違えた問題のみ復習しましょう。') %>
          </p>
        </div>

        <!-- スコア強調 -->
        <div class="mb-8">
          <div class="inline-flex items-center gap-6 rounded-2xl border bg-white px-6 py-5 shadow-sm">
            <div class="text-left">
              <div class="text-xs text-gray-500 mb-1"><%= t('.correct_rate', default: '正答率') %></div>
              <div class="text-5xl font-extrabold tracking-tight text-blue-700">
                <% if @answered.to_i > 0 %>
                  <%= number_to_percentage(@correct_count.to_f / @answered * 100, precision: 0) %>
                <% else %>
                  0%
                <% end %>
              </div>
            </div>
            <div class="h-12 w-px bg-gray-200"></div>
            <div class="text-left">
              <div class="text-xs text-gray-500 mb-1"><%= t('.answered_count', default: '回答数') %></div>
              <div class="text-2xl font-bold text-gray-900"><%= @answered %> / <%= @total %></div>
            </div>
            <div class="text-left">
              <div class="text-xs text-gray-500 mb-1"><%= t('.correct_count', default: '正解数') %></div>
              <div class="text-2xl font-bold text-blue-700"><%= @correct_count %></div>
            </div>
          </div>
        </div>

        <!-- 統計カード（3分割） -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-10">
          <div class="card bg-white border shadow-sm">
            <div class="card-body py-4">
              <div class="text-xs text-gray-500"><%= t('.answered_count', default: '回答数') %></div>
              <div class="text-2xl font-bold"><%= @answered %> / <%= @total %></div>
            </div>
          </div>
          <div class="card bg-white border shadow-sm">
            <div class="card-body py-4">
              <div class="text-xs text-gray-500"><%= t('.correct_count', default: '正解数') %></div>
              <div class="text-2xl font-bold text-blue-700"><%= @correct_count %></div>
            </div>
          </div>
          <div class="card bg-white border shadow-sm">
            <div class="card-body py-4">
              <div class="text-xs text-gray-500"><%= t('.correct_rate', default: '正答率') %></div>
              <div class="text-2xl font-bold">
                <% if @answered.to_i > 0 %>
                  <%= number_to_percentage(@correct_count.to_f / @answered * 100, precision: 0) %>
                <% else %>
                  0%
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- 誤答リスト or 全問正解メッセージ -->
        <% if @wrong_results.any? %>
          <h2 class="text-xl font-semibold text-blue-700 mb-4"><%= t('.wrong_questions_title', default: '間違えた問題') %></h2>
          <div class="space-y-4">
            <% @wrong_results.each do |result| %>
              <div class="rounded-2xl bg-white border shadow-sm p-4">
                <p class="font-semibold text-gray-900">
                  <%= t('.question_label', default: '問題:') %> <%= result.card.question %>
                </p>
                <p class="mt-1 text-gray-700">
                  <%= t('.answer_label', default: '答え:') %> <%= result.card.answer %>
                </p>
              </div>
            <% end %>
          </div>

          <div class="mt-8 flex justify-center">
            <%= button_to t('.retry_button', default: '間違えた問題だけ復習する'),
                  retry_wrong_deck_study_session_path(@deck, @session),
                  method: :post,
                  class: "btn btn-primary rounded-xl min-w-64" %>
          </div>
        <% else %>
          <div class="rounded-2xl bg-blue-50 border border-blue-100 text-blue-900 px-5 py-4 mb-6">
            <span class="font-semibold"><%= t('.all_correct', default: '全問正解！') %></span>
            <span class="ml-2 text-sm"><%= t('.all_correct_hint', default: '素晴らしい！次の単語帳や難易度に挑戦しましょう。') %></span>
          </div>
        <% end %>

        <!-- ナビゲーション -->
        <div class="mt-10 flex flex-col sm:flex-row justify-center items-center gap-3">
          <%= link_to t('.back_to_decks_button', default: '一覧へ'), decks_path, class: "btn rounded-xl" %>
          <%= link_to t('.back_to_deck_button', default: 'この単語帳へ戻る'), deck_path(@deck), class: "btn btn-outline rounded-xl" %>
        </div>
      </section>
    </div>
  </main>
</div>