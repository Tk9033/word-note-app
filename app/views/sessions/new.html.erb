<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-50 via-white to-blue-50 px-4">
  <div class="w-full max-w-md">
    <%# ロゴ（あとで不要になったらこのブロックごと削除すればOK） %>
    <div class="flex items-center gap-3 mb-6 justify-center">
      <div class="h-10 w-10 rounded-2xl bg-blue-600 grid place-items-center text-white font-bold shadow-lg">W</div>
      <div class="text-xl font-semibold text-gray-800">Wordnote</div>
    </div>

    <%# カード %>
    <div class="bg-white/90 backdrop-blur rounded-2xl shadow-xl p-8 border border-gray-100">
      <h1 class="text-2xl font-bold text-gray-900 mb-6"><%= t('.title') %></h1>

      <%= render "shared/error_messages", object: @login_form %>

      <%= form_with model: @login_form, url: login_path, class: "space-y-5" do |f| %>
        <div>
          <%= f.label :email, t('sessions.new.labels.email'),
                class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email,
                class: "w-full rounded-xl border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= f.label :password, t('sessions.new.labels.password'),
                class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password,
                class: "w-full rounded-xl border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="pt-2">
          <%= f.submit t('.submit'),
                class: "w-full inline-flex items-center justify-center gap-2 rounded-xl bg-blue-600 px-4 py-2 font-medium text-white shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div class="text-center">
          <%= link_to t('.back_to_signup'), new_user_path, class: "text-sm text-blue-600 hover:underline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
